{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "index.ts",
    "core/**/*.ts",
    "engine/**/*.ts",
    "pulse/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts",
    "examples"
  ]
}
