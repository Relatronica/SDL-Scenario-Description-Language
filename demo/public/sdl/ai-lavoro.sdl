  }

  // â”€â”€ Branches â”€â”€

  branch "Regolamentazione forte" when regulation_level > 0.7 {
    probability: 0.40

    variable posti_lavoro_a_rischio {
      2031: 2.8
      2033: 3.12
      2035: 3.3
