    control: slider
    description: "Percentuale annua di aziende italiane che adottano sistemi AI nei processi produttivi"
  }

  parameter training_investment {
    value: 5B EUR
    range: [1B EUR, 25B EUR]
    step: 0.5B EUR
    label: "Investimento in riqualificazione"
    unit: "miliardi â‚¬"
